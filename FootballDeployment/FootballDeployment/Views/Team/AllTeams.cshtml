@model List<FootballDeployment.Models.Team>

<link href="~/Style.css" rel="stylesheet" />

<h1>All Available Teams</h1>

@if (Model.Count == 0)
{
    <p>No Teams found.</p>
    <p><a asp-action="Index" asp-controller="Home">Go back and Create a new Team!</a></p>
}
else
{
    <table class="teams">
        <thead>
            <tr class="panel">
                <th>Team</th>
                <th>Country</th>
                <th>Field</th>
                <th></th>
            </tr>
        </thead>

        <tbody id="table-body">
            @{
                foreach (var team in Model)
                {
                    <tr>
                        <td>@team.Name</td>
                        <td>@team.Country</td>
                        <td>@team.Field</td>
                        <td><a asp-action="TeamInfo" asp-route-teamName="@team.Name">Join the Team</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
}